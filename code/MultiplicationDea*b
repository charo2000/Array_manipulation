#include <stdio.h>

int multiplication(int a, int b) {
    int resultat = 0;
    for (int i = 0; i < b; i++) {
        int temp = 0;
        for (int j = 0; j < a; j++) {
            temp = temp + 1;  // incrémentation exclusive avec +1
        }
        resultat = resultat + temp;
    }
    return resultat;
}

int main() {
    int a, b;
    printf("Entrez deux entiers positifs a et b : ");
    scanf("%d %d", &a, &b);

    printf("%d × %d = %d\n", a, b, multiplication(a, b));
    return 0;
}
